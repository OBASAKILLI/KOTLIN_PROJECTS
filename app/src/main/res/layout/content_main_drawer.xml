<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main_drawer"
        tools:context=".MainDrawer">
    <LinearLayout android:layout_width="match_parent" android:orientation="vertical"

                  android:layout_marginHorizontal="5dp" android:layout_height="match_parent">

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/line5"
                      android:layout_height="wrap_content">
            <ImageButton android:layout_width="180dp"
                         android:src="@drawable/animation"
                         android:id="@+id/animation"
                         android:scaleType="fitCenter"
                         android:layout_height="180dp"/>

            <ImageButton
                    android:layout_width="180dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/date"
                    android:src="@drawable/date"
                    android:scaleType="fitCenter"
                    android:layout_height="180dp"/>

        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_marginHorizontal="30dp"
                      android:orientation="horizontal" android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv1" android:layout_marginRight="10dp"
                      android:text="ANIMATION"
                      android:background="@android:color/holo_blue_bright"
                      android:textSize="20sp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv2"
                      android:layout_marginHorizontal="70dp"
                      android:text="DATE"
                      android:background="@android:color/holo_blue_bright"
                      android:textSize="20sp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/line8"
                      android:layout_height="wrap_content">
            <ImageButton android:layout_width="180dp"
                         android:scaleType="fitCenter"
                         android:src="@drawable/datastorage"
                         android:id="@+id/datastorage"
                         android:layout_height="180dp"/>

            <ImageButton
                    android:layout_width="180dp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/share2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/share"
                    android:layout_height="180dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                    android:layout_marginLeft="30sp"
                      android:orientation="horizontal" android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv3" android:layout_marginRight="50dp"
                      android:text="DATA STORAGE"
                      android:background="@android:color/holo_blue_bright"
                      android:textSize="20sp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv4"
                      android:layout_marginHorizontal="40dp"
                      android:text="SHARE"
                      android:background="@android:color/holo_blue_bright"
                      android:textSize="20sp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/line6"
                      android:layout_height="wrap_content">
            <ImageButton android:layout_width="180dp"
                         android:src="@drawable/fragments"
                         android:scaleType="fitCenter"
                         android:id="@+id/fragment"
                         android:layout_height="180dp"/>

            <ImageButton
                    android:layout_width="180dp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/calculator"
                    android:src="@drawable/calcularor"
                    android:scaleType="fitCenter"
                    android:layout_height="180dp"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                     android:layout_marginLeft="30sp"
                      android:orientation="horizontal" android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv5"
                      android:layout_marginRight="50dp"
                      android:text="FRAGMENTS"
                      android:background="@android:color/holo_blue_bright"
                      android:textSize="20sp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv6"
                      android:layout_marginHorizontal="30dp"
                      android:text="CALCULATOR"
                      android:background="@android:color/holo_blue_bright"
                      android:textSize="20sp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/line7"
                      android:layout_height="wrap_content">
            <ImageButton android:layout_width="180dp"
                         android:id="@+id/telephone" android:scaleType="fitCenter"
                         android:src="@drawable/telephone"
                         android:layout_height="180dp"/>

            <ImageButton
                    android:layout_width="180dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/bluetooth"
                    android:src="@drawable/bluetooth"
                    android:scaleType="fitCenter"
                    android:layout_height="180dp"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                     android:layout_marginLeft="30sp"
                      android:orientation="horizontal" android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv7" android:layout_marginRight="50dp"
                      android:text="TELEPHONE"
                      android:background="@android:color/holo_blue_bright"
                      android:textSize="20sp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv28"
                      android:layout_marginHorizontal="20dp"
                      android:text="BLUETOOTH"
                      android:background="@android:color/holo_blue_bright"
                      android:textSize="20sp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/line4"
                      android:layout_height="wrap_content">
            <ImageButton android:layout_width="180dp"
                         android:id="@+id/menu"
                         android:src="@drawable/menu" android:scaleType="fitCenter"
                         android:layout_height="180dp"/>

            <ImageButton
                    android:layout_width="180dp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/time"
                    android:src="@drawable/time"
                    android:scaleType="fitCenter"
                    android:layout_height="180dp"/>
        </LinearLayout>  <LinearLayout android:layout_width="match_parent"
                                       android:layout_marginLeft="30dp"
                                       android:orientation="horizontal" android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv9"
                  android:layout_marginRight="50dp"
                  android:text="FRAGMENTS"
                  android:background="@android:color/holo_blue_bright"
                  android:textSize="20sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv10"
                  android:layout_marginHorizontal="30dp"
                  android:text="TIME"
                  android:background="@android:color/holo_blue_bright"
                  android:textSize="20sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/line3"
                      android:layout_height="wrap_content">
            <ImageButton android:layout_width="180dp"
                         android:id="@+id/share"
                         android:scaleType="fitCenter"
                         android:src="@drawable/share"
                         android:layout_height="180dp"/>

            <ImageButton
                    android:layout_width="180dp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/notification"
                    android:scaleType="fitCenter"
                    android:src="@drawable/notifications"
                    android:layout_height="180dp"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                    android:layout_marginLeft="30sp"
                      android:orientation="horizontal" android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv11" android:layout_marginRight="50dp"
                      android:text="SHARE..."
                      android:background="@android:color/holo_blue_bright"
                      android:textSize="20sp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv12"
                      android:layout_marginHorizontal="30dp"
                      android:text="NOTIFICATION"
                      android:layout_gravity="right"
                      android:background="@android:color/holo_blue_bright"
                      android:textSize="20sp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>